    <record id="add_description_filed_to_stock_picking" model="ir.ui.view">
        <field name="name">add.description.filed.to.stock.picking</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='origin']" position="after">
                <field name="description"/>
            </xpath>
        </field>
    </record>


    <record id="res_config_settings_inheit_view" model="ir.ui.view">
        <field name="name">res.config.settings.inherit.view</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock_request.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='stock_request']" position="after">
                <div class="col-12" id="discount_limit">
                    <div class="o_setting_left_pane" style="width:70px;margin-top:-9px;">
                        <label for="location_id" string=""/>
                        <div class="text-muted mb16">
                            Location
                        </div>
                    </div>
                    <div class="">
                        <field name="location_id" domain="[('usage', '=', 'inventory')]"/>
                    </div>

                </div>

                <div style="clear:both"></div>

                <div class="col-12" id="">
                    <div class="o_setting_left_pane"
                         style="width:70px;margin-top:-9px;font-size:12px;color:#000;margin-bottom:10px;">
                        <label for="warehouse_id" string=""/>
                        <div class="text-muted mb16">
                            Warehouse
                        </div>
                    </div>
                    <div class="">
                        <field name="warehouse_id"/>
                    </div>

                </div>
            </xpath>
        </field>
    </record>





