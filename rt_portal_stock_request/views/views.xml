            box-shadow: 0px 0px 5px 1px #ccc;
            cursor: pointer;
            display: inline-block;
            max-height: 70px;
            overflow: hidden;
            text-overflow: hidden;
            transition: max-height 0.2s linear;
            width: 100%;
            }

