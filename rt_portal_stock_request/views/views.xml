                                <div class="col-sm-10">
                                    <select name="warehouse" class="form-control" required="required">
                                        <t t-foreach="warehouse" t-as="value">
                                            <option t-esc="value.name" t-att-value="value.id"/>
                                        </t>
                                    </select>
                                </div>
                            </div>
                            <div class="row">
                                <label for="location" class="control_label col-sm-2 col-form-label">Location:
