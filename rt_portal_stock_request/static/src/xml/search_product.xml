<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="productStockSearch">
        <form role="form" action="/create/sr_line" method="post">
            <input type="hidden" name="id" t-att-value="id"/>
            <div class="row">
                <div class="col-md-4">
                    <label for="product">Stock Product</label>
                    <select name="product" class="form-control"
                            required="required" id="product_name_val">
                        <option></option>
                        <t t-foreach="res" t-as="o">
                            <option t-esc="o.display_name" t-att-value="o.id"
                                    required="required"/>
                        </t>
                    </select>
                </div>
                <div class="form-group col-md-4">
                    <label for="">Product Quantity</label>
                    <input type="number" class="form-control" id="quantity" name="quantity"
                           t-att-value="quantity" step="any"/>
                </div>
                <div class="form-group col-md-4">
                    <button type="create" class="btn btn-secondary text-center"
                            style="margin-top: 24px;">
                        Add
                    </button>
                </div>
            </div>
        </form>

    </t>
</templates>
