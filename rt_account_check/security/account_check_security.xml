<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="account_check_rule" model="ir.rule">
            <field name="name">Check Multi-Company</field>
            <field name="model_id" ref="model_account_check"/>
            <field eval="True" name="global"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
        </record>

        <record id="edit_check_status" model="res.groups">
            <field name="name">Change Check Status</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>


        <record id="account_check_payment_rule" model="ir.rule">
            <field name="name">Account Check Payment</field>
            <field name="model_id" ref="model_account_payment"/>
            <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
            <field name="domain_force">[('create_uid','=', user.id)]</field>
        </record>

        <record id="account_check_payment_user_rule" model="ir.rule">
            <field name="name">Account Check Payment</field>
            <field name="model_id" ref="model_account_payment"/>
            <field name="groups" eval="[(4, ref('account.group_account_invoice'))]"/>
            <field name="domain_force">[(1,'=', 1)]</field>
        </record>

    </data>
</odoo>
