<odoo>
    <data>

        <record id="add_filed_of_note_to_purchase_request" model="ir.ui.view">
            <field name="name">add.filed.of.note.to.purchase.request</field>
            <field name="model">purchase.request</field>
            <field name="inherit_id" ref="purchase_request.view_purchase_request_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='line_ids']/tree//field[@name='product_qty']" position="after">
                        <field name="gl_account_id" domain="[('is_request', '=', True)]"/>
                    </xpath>
                    <xpath expr="//field[@name='group_id']" position="after">
                        <field name="type"/>
                    </xpath>

                    <xpath expr="//notebook[last()]" position="inside">
                        <page string="Note" name="note">
                            <group>
                                <field name="note"/>
                            </group>

                        </page>
                    </xpath>
                </data>
            </field>
        </record>


    </data>
</odoo>