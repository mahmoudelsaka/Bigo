<odoo>
    <data>

        <!-- Inherit Form View to Modify it -->
        <record id="view_account_check_form_view" model="ir.ui.view">
            <field name="name">view.account.check.form</field>
            <field name="model">account.check</field>
            <field name="inherit_id" ref="rt_account_check.view_account_check_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group/group[2]" position="after">
                    <group name="other_info">
                        <field name="installment_type"/>
                    </group>
                </xpath>
            </field>
        </record>


        <record id="view_account_check_tree_view" model="ir.ui.view">
            <field name="name">view.account.check.tree</field>
            <field name="model">account.check</field>
            <field name="inherit_id" ref="rt_account_check.view_account_check_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='owner_name']" position="after">
<!--                    <field name="installment" invisible="1"/>-->
<!--                    <field name="adv_pay" invisible="1"/>-->
                </xpath>
            </field>
        </record>

        <!-- Inherit Form View to Modify it -->
        <record id="view_account_payment_form_inherit" model="ir.ui.view">
            <field name="name">view.account.payment.form.inherit</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="rt_account_check.view_account_payment_form_inherited"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='check_data']/field[@name='check_bank_id']" position="after">
                    <!-- Add your fields or attributes here -->
                    <field name="installment_type"/>
                </xpath>
            </field>
        </record>


        <record id="view_move_form_inherit" model="ir.ui.view">
            <field name="name">view.move.form.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='line_ids']/tree/field[@name='analytic_distribution']" position="after">
                    <field name="installment_type" optional="hide"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>