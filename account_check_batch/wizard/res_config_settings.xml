<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.inherit</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='account_check']/div[2]/div[2]/div[1]" position="after">
                    <div class="row mt16">
                        <label for="installment_account_id" class="col-md-3 o_light_label"/>
                        <field name="installment_account_id"/>
                    </div>
                    <div class="row mt16">
                        <label for="receivable_check_account_id" class="col-md-3 o_light_label"/>
                        <field name="receivable_check_account_id"/>
                    </div>
                    <div class="row mt16">
                        <label for="old_receivable_check_account_id" class="col-md-3 o_light_label"/>
                        <field name="old_receivable_check_account_id"/>
                    </div>
                </xpath>

                <xpath expr="//div[@id='import_bank_statements_csv']/div[2]" position="inside">
                    <!--                    <div class="o_setting_left_pane"/>-->
                    <div class="content-group">
                        <!-- Utilities Account-->
                        <div class="row mt16">
                            <label for="utilities_electric_check_account_id" class="col-md-3 o_light_label"/>
                            <field name="utilities_electric_check_account_id"/>
                        </div>
                        <div class="row mt16">
                            <label for="utilities_water_check_account_id" class="col-md-3 o_light_label"/>
                            <field name="utilities_water_check_account_id"/>
                        </div>
                        <div class="row mt16">
                            <label for="utilities_stp_check_account_id" class="col-md-3 o_light_label"/>
                            <field name="utilities_stp_check_account_id"/>
                        </div>
                        <div class="row mt16">
                            <label for="utilities_telecom_check_account_id" class="col-md-3 o_light_label"/>
                            <field name="utilities_telecom_check_account_id"/>
                        </div>

                        <!-- Maintenance Account-->
                        <div class="row mt16">
                            <label for="maintenance_check_account_id" class="col-md-3 o_light_label"/>
                            <field name="maintenance_check_account_id"/>
                        </div>
                        <!-- Community Account-->
                        <div class="row mt16">
                            <label for="community_check_account_id" class="col-md-3 o_light_label"/>
                            <field name="community_check_account_id"/>
                        </div>

                        <!-- Others Account-->
                        <div class="row mt16">
                            <label for="others_check_account_id" class="col-md-3 o_light_label"/>
                            <field name="others_check_account_id"/>
                        </div>
                    </div>

                </xpath>
            </field>
        </record>

    </data>
</odoo>