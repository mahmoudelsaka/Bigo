<odoo>
    <data>
        <record id="purchase.group_purchase_manager" model="res.groups">
            <field name="name">Engineering</field>
            <field name="category_id" ref="base.module_category_inventory_purchase"/>
            <field name="implied_ids" eval="[(4, ref('purchase.group_purchase_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <record id="group_purchase_order_manager_group" model="res.groups">
            <field name="name">Manager</field>
            <field name="implied_ids" eval="[(4, ref('purchase.group_purchase_user'))]"/>
            <field name="category_id" ref="base.module_category_inventory_purchase"/>
        </record>

        <record id="group_purchase_order_admin" model="res.groups">
            <field name="name">Administrator1</field>
            <field name="category_id" ref="base.module_category_inventory_purchase"/>
            <field name="implied_ids" eval="[(4, ref('purchase.group_purchase_user'))]"/>
        </record>

        <record id="purchase_order_rule_engineering" model="ir.rule">
            <field name="name">purchase order rule engineering</field>
            <field name="model_id" ref="purchase.model_purchase_order"/>
            <field name="groups" eval="[(6,0, [ref('purchase.group_purchase_manager')])]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="domain_force">[('type.is_engineering','=',True)]
            </field>
        </record>
        <!-- ========== po engineering can see pr of type engineering ============-->
        <record id="purchase_request_rule_engineering" model="ir.rule">
            <field name="name">purchase request rule engineering</field>
            <field name="model_id" ref="purchase_request.model_purchase_request"/>
            <field name="groups" eval="[(6,0, [ref('purchase.group_purchase_manager')])]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="domain_force">['|','|','|','|',('requested_by','=',user.id),
                ('assigned_to','=',user.id),('message_partner_ids', 'in', [user.partner_id.id]),('create_uid','=',
                user.id),('type.is_engineering','=',True)]
            </field>
        </record>
        <!-- ========== po engineering can see pr line of type engineering ============-->
        <record id="purchase_request_line_rule_engineering" model="ir.rule">
            <field name="name">purchase request line rule engineering</field>
            <field name="model_id" ref="purchase_request.model_purchase_request_line"/>
            <field name="groups" eval="[(6,0, [ref('purchase.group_purchase_manager')])]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="domain_force">['|','|',('request_id.requested_by','=',user.id),
                ('request_id.message_partner_ids',
                'in', [user.partner_id.id]),('request_id.type.is_engineering','=',True)]
            </field>
        </record>


        <record id="group_purchase_order_manager_group_rule" model="ir.rule">
            <field name="name">purchase order rule manager group</field>
            <field name="model_id" ref="purchase.model_purchase_order"/>
            <field name="groups" eval="[(6,0, [ref('group_purchase_order_manager_group')])]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="domain_force">[('type.is_engineering','=',False)]
            </field>
        </record>


        <record id="group_purchase_order_admin_rule" model="ir.rule">
            <field name="name">group purchase order admin</field>
            <field name="model_id" ref="purchase.model_purchase_order"/>
            <field name="groups" eval="[(6,0, [ref('group_purchase_order_admin')])]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="domain_force">[(1,'=',1)]</field>
        </record>


    </data>
</odoo>