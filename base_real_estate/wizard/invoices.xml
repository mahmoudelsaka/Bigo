<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="invoices_wizard_form" model="ir.ui.view">
            <field name="name">rt.invoices.form</field>
            <field name="model">invoice.update</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <footer>
                        <button name="update_data_invoices" type="object" string="Update Invoices" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <act_window id="update_data_line_invoices"
                    name="Update Multi Invoices"
                    res_model="invoice.update"
                    binding_model="account.move"
                    binding_views="form,list"
                    view_mode="form" target="new"
        />
    </data>
</odoo>